<script>
    var vm = new Vue({
        el: '#app',
        data: {
            sites: [],
            activeName: 'first',
            Order: {}
        },
        created: function () {
            let self = this;
            axios.get('http://localhost:52721/api/orderApi/GetOrders', {
                headers: {
                    'timestamp': '999999999',
                    'nonce': '234532',
                    'singture': '999999999234532#9793932i82`/',
                    'staffid':'#9793932i82`/'
                }
            }).then(function (res) {
                self.sites = res.data;
                console.log(self.sites);
                for (var o in self.sites) {
                    if (self.sites[o].HarvestTime == "") {
                        self.sites[o].HarvestTime = "";
                        self.sites[o].OrderState = self.sites[o].OrderState == 0 ? "待发货" : "已发货";
                    } else {
                        self.sites[o].OrderState = "已签收";
                    }
                }
            })
        },
        methods: {
            //行状态事件
            tableRowClassName: function ({ row, rowIndex }) {
                if (row.OrderState =="待发货") {
                    return 'warning-row';
                } else if (row.OrderState =="已发货") {
                    return 'success-row';
                }
                return '';
            },
            //卡片切换事件
            handleClick: function (tab) {
                if (tab.name == "first") {
                    let self = this;
                    axios.get('http://localhost:52721/api/orderApi/GetOrders', {
                        headers: {
                            'timestamp': '999999999',
                            'nonce': '234532',
                            'singture': '999999999234532#9793932i82`/',
                            'staffid': '#9793932i82`/'
                        }
                    }).then(function (res) {
                        self.sites = res.data;
                        console.log(self.sites);
                        for (var o in self.sites) {
                            if (self.sites[o].HarvestTime == "") {
                                self.sites[o].HarvestTime = "";
                                self.sites[o].OrderState = self.sites[o].OrderState == 0 ? "待发货" : "已发货";
                            } else {
                                self.sites[o].OrderState = "已签收";
                            }
                        }
                    })
                } else {
                    var self = this;
                    axios.get('http://localhost:52721/api/orderApi/GetOrders?TJ=' + tab.name, {
                        headers: {
                            'timestamp': '999999999',
                            'nonce': '234532',
                            'singture': '999999999234532#9793932i82`/TJ'+tab.name ,
                            'staffid': '#9793932i82`/'
                        }
                    }).then(function (res) {
                        self.sites = res.data;
                        console.log(self.sites);
                        for (var o in self.sites) {
                            if (self.sites[o].HarvestTime == "") {
                                self.sites[o].HarvestTime = "";
                                self.sites[o].OrderState = self.sites[o].OrderState == 0 ? "待发货" : "已发货";
                            } else {
                                self.sites[o].OrderState = "已签收";
                            }
                        }
                    })
                }
            },
            //点击发货事件
            Edit: function (id) {
                axios.get('http://localhost:52868/Order/Upt?id=' + id).then(function (res) {
                    let self = this;
                    axios.get('http://localhost:52721/api/orderApi/GetOrders', {
                        headers: {
                            'timestamp': '999999999',
                            'nonce': '234532',
                            'singture': '999999999234532#9793932i82`/',
                            'staffid': '#9793932i82`/'
                        }
                    }).then(function (res) {
                        self.sites = res.data;
                        console.log(self.sites);
                        for (var o in self.sites) {
                            if (self.sites[o].HarvestTime == "") {
                                self.sites[o].HarvestTime = "";
                                self.sites[o].OrderState = self.sites[o].OrderState == 0 ? "待发货" : "已发货";
                            } else {
                                self.sites[o].OrderState = "已签收";
                            }
                        }
                    })
                })
            },
            Get: function (id) {
                var self = this;
                axios.get('http://localhost:52868/Order/Edit?id=' + id).then(function (res) {
                    self.Order = res.data;
                    console.log(self.Order);
                })
            }
        }
    })
</script>
